rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /clients/{clientId}/chronicles/{docId} {
       allow read, write: if request.auth != null; 
    }

    match /clients/{clientId}/user_inputs/{inputId} {
      allow read, write: if request.auth != null;
    }
    
    match /users/{userId}/projects/{projectId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Inquiries: Anyone can write, but only admins can read (Strict Security)
    match /inquiries/{docId} {
      allow create: if true; // Public write access for landing page
      allow read, update, delete: if request.auth != null && 
          request.auth.token.email in ['tanhyu.kim@gmail.com', 'devpablokim@gmail.com'];
    }
  }
}
