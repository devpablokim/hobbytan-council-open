rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /clients/{clientId}/chronicles/{docId} {
      // Allow read if user is authenticated (MVP: simple check)
      // Production: check request.auth.token.clientId == clientId
      allow read: if request.auth != null; 
      allow write: if false; // Only Admin SDK (Backend) can write
    }
  }
}
