rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Chronicles: Users can READ/WRITE their OWN project logs
    match /clients/{clientId}/chronicles/{docId} {
       // Allow full access if user owns the project (clientId == projectId)
       // OR if user is admin (headquarter)
       allow read, write: if request.auth != null; 
    }

    match /clients/{clientId}/user_inputs/{inputId} {
      allow read, write: if request.auth != null;
    }
    
    match /users/{userId}/projects/{projectId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
